{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "01_gdb调试_simple",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/out/finalobj",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", 
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                }
            ],

            //"preLaunchTask": "01_cpp编译_simple"   // 调试前，指定编译任务
        }
    ]
}